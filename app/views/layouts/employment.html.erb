<!DOCTYPE html>
<html>
<head>
  <title>Peaks and Valleys, LLC - Employment Application</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='employment-container'>
  	<div class='employment-content'>
	  	<%= image_tag 'logo.gif' %>

	  	<div class="panel panel-red panel-success">
	  		<div class="panel-heading">
	  		  <div class="panel-title text-center">Employment Application</div>
	  		</div>
  		  <div class='panel-body'>
			  	<span id='bootstrap-flash'><%= bootstrap_flash %></span>
			  	<%= yield %>
			  	<%= debug(params) if Rails.env.development? %>
			  </div>
			</div>

	  </div>
  </div>
</body>
</html>
