<!DOCTYPE html>
<html>
<head>
  <title>Sani</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body>
  <div class='container'>
    <% if user_signed_in? %>
      <!-- SIGNED IN TEMPLATE -->
      <%= render 'layouts/header.html' %>
    	<%= render 'layouts/sidebar.html' %>
      <div class='content'>
        <%= semantic_form_for @current_facility do |f| %>
          <% f.input :id, as: :select, collection: current_user.facilities, label: false, include_blank: false %>
        <% end if @selector %>
        <span id='bootstrap-flash'><%= bootstrap_flash %></span>
        <%= yield %>
        <%= debug(params) if Rails.env.development? %>
      </div>

    <% else %>
      <!-- LANDING PAGE -->

    <div class="container-960">
      <header>
        <span id='bootstrap-flash'><%= bootstrap_flash %></span>
        <div class='header'>
          <div class="pull-left">
            <%= link_to 'Sani', root_url %>
          </div>
          <div class='pull-right'>
            <%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-inline' }) do |f| %>
              <div class="form-group">
                <%= f.input :email, label: false, placeholder: "Email", input_html: { class: 'form-control' } %>
              </div>
              <div class="form-group">
                <%= f.input :password, label: false, placeholder: "Password", input_html: { class: 'form-control' } %>
              </div>
              <div class="form-group">
                <%= f.submit 'Sign In', class: 'btn btn-panel' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="banner">
          <%= image_tag 'banner.jpg', alt: 'Banner Image' %>
        </div>
      </header>

      <section id="services">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="section-heading">Modernize Your Business</h2>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-line-chart fa-stack-1x fa-inverse"></i>
            </span>
            <h4 class="service-heading">Productivity</h4>
            <p class="text-muted">Improve your productivity. Work faster, smarter, and stop fumbling around with paperwork.</p>
          </div>
          <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-globe fa-stack-1x fa-inverse"></i>
            </span>
            <h4 class="service-heading">Work Anywhere</h4>
            <p class="text-muted">Don't be chained to your office. Know all the intimate details whether you're at work or not.</p>
          </div>
          <div class="col-md-4">
            <span class="fa-stack fa-4x">
              <i class="fa fa-circle fa-stack-2x text-primary"></i>
              <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
            </span>
            <h4 class="service-heading">Security</h4>
            <p class="text-muted">Know that your information is safe, even from you if your forget your password!</p>
          </div>
        </div>
      </section>

      <section id="contact">
          <div class="container">
              <div class="row">
                  <div class="col-lg-12 text-center">
                      <h2 class="section-heading">Contact</h2>
                      <h3 class="section-subheading text-muted">Time is valuable. You'll get a response right away.</h3>
                  </div>
              </div>
              <div class="row">
                  <div class="col-lg-12">
                      <form name="sentMessage" id="contactForm" novalidate="">
                          <div class="row">
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <input type="text" class="form-control" placeholder="Your Name *" id="name" required="" data-validation-required-message="Please enter your name.">
                                      <p class="help-block text-danger"></p>
                                  </div>
                                  <div class="form-group">
                                      <input type="email" class="form-control" placeholder="Your Email *" id="email" required="" data-validation-required-message="Please enter your email address.">
                                      <p class="help-block text-danger"></p>
                                  </div>
                                  <div class="form-group">
                                      <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required="" data-validation-required-message="Please enter your phone number.">
                                      <p class="help-block text-danger"></p>
                                  </div>
                              </div>
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <textarea class="form-control" placeholder="Your Message *" id="message" required="" data-validation-required-message="Please enter a message."></textarea>
                                      <p class="help-block text-danger"></p>
                                  </div>
                              </div>
                              <div class="clearfix"></div>
                              <div class="col-lg-12 text-center">
                                  <div id="success"></div>
                                  <button type="submit" class="btn btn-xl">Send Message</button>
                              </div>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </section>
        
        <%= debug(params) if Rails.env.development? %>
      </div>

    <% end %>
  </div>
</body>
</html>
