<% dashboard_view ||= false %>

<table class="table table-condensed table-striped table-hover table-responsive maintenance">
	<thead>
		<tr>
			<th class='priority'>Priority</th>
			<th class='location'>Location</th>
			<th class='description'>Description</th>
			<% if dashboard_view %>
				<th class='completed'>Completed</th>
			<% else %>
				<th class='view text-center'>View</th>
			<% end %>
		</tr>
	</thead>
  <tbody>
  	<% @maintenance_requests.each do |request| %>
	  	<tr>
	   		<td><span class="label label-<%= Collections::PRIORITY[request.priority] %>"><%= request.priority %><span></td>
	   		<td><%= request.location %></td>
	   		<td><%= request.description %></td>
	   		<% if dashboard_view %>
	   			<td><%= request.completed_date.try(:strftime, '%m/%d/%Y') %></td>
	   		<% else %>
	   			<td class='text-center'><%= link_to 'View', edit_facility_maintenance_request_path(@current_facility, request), class: 'btn btn-xs btn-default' %></td>
	   		<% end %>
	   	</tr>
	  <% end %>
  </tbody>
</table>

