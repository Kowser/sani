<% dashboard_view ||= false %>

<table class="table table-condensed table-striped table-hover table-responsive">
	<thead>
		<tr>
			<th>Priority</th>
			<th>Location</th>
			<th>Description</th>
			<% if dashboard_view %>
				<th>Completed</th>
			<% else %>
				<th>View</th>
			<% end %>
		</tr>
	</thead>
  <tbody>
  	<% @maintenance_requests.each do |request| %>
	  	<tr>
	   		<td><%= request.priority %></td>
	   		<td><%= request.location %></td>
	   		<td><%= truncate(request.description, length: 90) %></td>
	   		<% if dashboard_view %>
	   			<td><%= request.completed_date.try(:strftime, '%m/%d/%Y') %></td>
	   		<% else %>
	   			<td><%= link_to 'View', edit_facility_maintenance_request_path(@current_facility, request), class: 'btn btn-xs btn-default' %></td>
	   		<% end %>
	   	</tr>
	  <% end %>
  </tbody>
</table>

