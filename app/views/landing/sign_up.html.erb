<% provide(:title, 'Create an Account') %>

<% content_for(:heading) do %>
  <div class='pull-right'>
    <h2>Create an Account</h2>
  </div>
<% end %>

<br><br><br><br>
<div class="landing">
	<div class="panel panel-babyblue">
	  <div class="panel-heading">
	    <h4 class="panel-title">Edit Name / Login</h4>
	  </div>
	  <%= semantic_form_for @user do |f| %>
	    <div class="panel-body">
        <h4>User Information</h4>
        <div class='row'>
          <div class='col-sm-6'>
            <%= f.input :first_name, placeholder: 'First Name' %>
          </div>
          <div class='col-sm-6'>
            <%= f.input :last_name, placeholder: 'Last Name' %>
          </div>
          <div class='col-sm-12'>
            <%= f.input :email, placeholder: 'Email Address', label: 'Login: A valid email', hint: "Please enter the email address you'd like to use to sign in." %>
          </div>
          <div class='col-sm-6'>
            <%= f.input :password, input_html: { autocomplete: 'off' } %>
          </div>
          <div class='col-sm-6'>
            <%= f.input :password_confirmation %>
          </div>
        </div>
        
	    </div>
	  <% end %>
	</div>
</div>
