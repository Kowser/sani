<div class="panel panel-gradient-babyblue">
  <div class="panel-heading">
    <div class="panel-title"><%= @resident.new_record? ? 'New' : 'Edit' %> Resident</div>
  </div>
  <div class='panel-body'>
    <%= semantic_form_for [@current_facility, @resident] do |f| %>
      <div class='row'>
        <div class='col-sm-2 col-xs-12'>
          <%= f.input :active, as: :select, include_blank: false, input_html: { disabled: @resident.new_record?} %>
        </div>
      </div>
      <div class='row'>
        <h4 class='text-center'>Resident's Information</h4>
        <div class='col-sm-4 col-xs-12'>
          <%= f.input :first_name %>
        </div>
        <div class='col-sm-4 col-xs-12'>
          <%= f.input :last_name %>
        </div>
        <div class='col-sm-2 col-xs-6'>
          <%= f.input :move_in, as: :string, label: 'Move In Date', input_html: { class: 'datepicker' } %>
        </div>
        <div class='col-sm-2 col-xs-6'>
          <%= f.input :rent, placeholder: '1234.56' %>
        </div>
        <div class='col-sm-2 col-xs-6'>
          <%= f.input :unit, placeholder: '6', collection: @current_facility.units.map(&:number) %>
        </div>
      </div>
      <div class='row'>
        <h4 class='text-center'>Representative's Information</h4>
        <div class='col-sm-6'>
          <%= f.input :contact_first_name %>
        </div>
        <div class='col-sm-6'>
          <%= f.input :contact_last_name %>
        </div>
      </div>
      <div class='row'>
        <div class='col-sm-6'>
          <%= f.input :phone %>
        </div>
        <div class='col-sm-6'>
          <%= f.input :email %>
        </div>
      </div>
      
      <div class='row'>
        <div class='col-sm-5'>
          <%= f.input :address %>
        </div>
        <div class='col-sm-3'>
          <%= f.input :city %>
        </div>
        <div class='col-sm-2'>
          <%= f.input :state, as: :select, collection: Collections::STATE %>
        </div>
        <div class='col-sm-2'>
          <%= f.input :zip %>
        </div>
      </div>
      <div class='row'>
          <div class='col-sm-12'>
            <%= f.input :notes, label: 'Additional Information', hint: 'Please do not enter sensitive data (medical, financial, etc..).', input_html: { rows: 3 } %>
          </div>
        </div>
      <%= f.submit 'Save Resident', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
