<div class='row'>
	<div class='col-md-6 col-offset-md-3'>
		<div class="panel panel-default">
		  <%= semantic_form_for :contact, url: residents_contact_form_path, remote: true do |f| %>
		    <!-- <h4 class='text-center'>Would you like to ask a question or schedule a tour?</h4><br><br> -->
		    <div>
		  	  <%= f.input :name, required: false, label: 'What is your name?', input_html: { value: @resident.name }  %>
		  	  <%= f.input :email, required: false, label: 'What is your email address?', input_html: { value: @resident.email } %>
		  	  <%= f.input :email, required: false, label: 'What is your phone number?', input_html: { value: @resident.phone } %>
		  	  <%= f.input :content, as: :text, required: false, label: 'Message', input_html: { rows: 6 } %>
		    </div>
		    <%= f.submit 'Send', class: 'btn btn-success' %>
		    <%= f.button 'Clear', class: 'btn btn-danger', type: :reset %>
		  <% end %>
		</div>
	</div>
</div>