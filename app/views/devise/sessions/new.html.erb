<div class='sign-in-box'>
  <h2 class='text-center'>Sign in</h2>
  <%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Email:</label>
      <div class="col-sm-10"><%= f.input :email, label: false, placeholder: "Email" %></div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Password:</label>
      <div class="col-sm-10"><%= f.input :password, label: false, placeholder: "Password" %></div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Sign In', class: 'btn btn-panel' %>

        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, as: :boolean %>
        <% end %>

        <%#= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>