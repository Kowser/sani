<header>
  <div class='header-links'>
    <div class='landing'> 
      <%= link_to 'Why Sani', '#'%> |
      <%= link_to 'Pricing', '#'%> |
      <%= link_to 'About Us', '#'%> |
      <%= link_to 'Contact Us', '#'%> |
      <%= link_to 'Sign Up', '#'%>
    </div>
  </div>
  <span id='bootstrap-flash'><%= bootstrap_flash %></span>
  <div class="landing">
    <div class='header'>
      <%= image_tag 'logo.gif', alt: 'Sani Logo Image', class: 'logo' %>
      <div class='pull-right sign-in-form'>
        <%= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-inline' }) do |f| %>
          <div class="form-group">
            <%= f.input :email, label: false, placeholder: "Email", input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.input :password, label: false, placeholder: "Password", input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group">
            <%= f.submit 'Sign In', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= image_tag 'banner.jpg', alt: 'Banner Image', class: 'banner' %>
</header>

<section id="services">
  <div class="landing">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">High Tech. Low Cost.</h2>
      </div>
    </div>
    <div class="row text-center">
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-line-chart fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Productivity</h4>
        <p class="text-muted">Improve your productivity. Work faster, smarter, and stop fumbling around with paperwork.</p>
      </div>
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-globe fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Work Anywhere</h4>
        <p class="text-muted">Don't be chained to your office. Know all the intimate details whether you're at work or not.</p>
      </div>
      <div class="col-md-4">
        <span class="fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-primary"></i>
          <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
        </span>
        <h4 class="service-heading">Security</h4>
        <p class="text-muted">Know that your information is safe.</p>
      </div>
    </div>
  </div>
</section>

<section id="contact">
  <div class="landing">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Contact Us - NOT FUNCTIONAL</h2>
        <h3 class="section-subheading text-muted">Time is valuable. You'll get a response right away.</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <form name="sentMessage" id="contactForm" novalidate="">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Your Name *" id="name" required="" data-validation-required-message="Please enter your name.">
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <input type="email" class="form-control" placeholder="Your Email *" id="email" required="" data-validation-required-message="Please enter your email address.">
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required="" data-validation-required-message="Please enter your phone number.">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <textarea class="form-control" placeholder="Your Message *" id="message" required="" data-validation-required-message="Please enter a message."></textarea>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>