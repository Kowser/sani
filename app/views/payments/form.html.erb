<div class="panel panel-gradient-babyblue">
  <div class="panel-heading">
    <div class="panel-title"><%= @payment.new_record? ? 'New' : 'Edit' %> Payment</div>
  </div>
  <div class='panel-body'>
    <%= semantic_form_for [@current_facility, @payment] do |f| %>
      <h4 class='text-center'>Payment Details</h4>
      <div class='row'>
        <div class='col-sm-4 col-sm-offset-2 col-xs-6'>
          <%= f.input :resident, collection: @current_facility.residents, input_html: { disabled: !@payment.new_record? } %>
        </div>
        <div class='col-sm-3 col-sm-offset-1 col-xs-6'>
        <%= f.input :receive_date, as: :string, label: 'Date Received', input_html: { class: 'datepicker' } %>
        </div>
      </div>
      <div class='row'>
        <div class='col-sm-3 col-sm-offset-3 col-xs-6'>
          <%= f.input :method, as: :select, collection: Collections::PAYMENT_METHOD, include_blank: @payment.new_record?, input_html: { class: 'payment-method' } %>
        </div>
        <div class='col-sm-3 col-sm-offset-1 col-xs-6'>
          <%= f.input :amount %>
        </div>
      </div>
      <div class='row'>
        <div class='col-sm-3 col-sm-offset-7 col-xs-6'>
          <%= f.input :deposited %>
        </div>
        <div class='col-sm-3 col-sm-offset-7 col-xs-6'>
          <%= f.input :deposit_date, as: :string, input_html: { class: 'datepicker' } %>
        </div>
      </div>
      <%= f.submit 'Save Payment', class: 'btn btn-success' %>
      <%= link_to 'Delete Payment', facility_payment_path(@current_facility, @payment), method: :delete, data: {confirm: 'Delete this invoice?'}, class: 'btn btn-danger pull-right' unless @payment.new_record? %>
    <% end %>
  </div>
</div>
